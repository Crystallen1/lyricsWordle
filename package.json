{
    "name": "lyrics-guess-game",
    "displayName": "猜歌词游戏",
    "description": "一个趣味猜歌词的 VS Code 游戏插件",
    "version": "1.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "activationEvents": [
        "onCommand:lyrics-guess.startGame"
    ],
    "contributes": {
        "commands": [{
            "command": "lyrics-guess.startGame",
            "title": "开始猜歌词游戏"
        }]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/node": "^14.x",
        "typescript": "^4.x"
    },
    "files": [
        "out/**/*",
        "src/data/**/*"
    ]
} 